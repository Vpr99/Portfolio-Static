{
  "name": "portfolio-static",
  "version": "0.1.0",
  "description": "Static Site Portfolio",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf build/*",
    "prebuild": "npm run clean && mkdirp build/public/{css,js,images}",
    "build": "npm-run-all -p build:*",
    "lint:css": "stylelint lib/css/**/*.css --config scripts/stylelint.config.js || true",
    "build:css": "postcss -c scripts/postcss.config.js lib/css/main.css -o build/public/css/main.css",
    "build:html": "node scripts/html.js",
    "postbuild:html": "node paths.js",
    "build:img": "imagemin lib/images/* build/public/images",
    "prebuild:js": "echo '=> Linting JS' && eslint lib/js/**.js",
    "build:js": "uglifyjs lib/js/*.js -o build/public/js/main.js",
    "watch:css": "onchange 'lib/css/**.*' -- npm run build:css",
    "watch:js": "onchange 'lib/js/**.*' -- npm run build:js",
    "watch:html": "onchange '**/*.html' -e 'build/**/*.html' -- npm run build:html",
    "server": "http-server ./build -s",
    "start": "npm-run-all -p build watch:* server"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Vpr99/Portfolio-Static.git"
  },
  "author": "Eric Skram",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Vpr99/Portfolio-Static/issues"
  },
  "homepage": "https://github.com/Vpr99/Portfolio-Static#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "cssnano": "^3.5.2",
    "eslint": "^2.3.0",
    "fs-extra": "^0.26.5",
    "glob-all": "^3.0.1",
    "http-server": "^0.9.0",
    "lost": "^6.7.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.5.2",
    "onchange": "^2.1.2",
    "path": "^0.12.7",
    "permalinks": "^0.3.1",
    "postcss": "^5.0.19",
    "postcss-animation": "0.0.6",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.0.2",
    "postcss-size": "^1.0.0",
    "postcss-vertical-rhythm": "^1.1.5",
    "posthtml": "^0.8.5",
    "posthtml-hint": "^0.8.1",
    "posthtml-include": "^1.0.2",
    "precss": "^1.4.0",
    "replace": "^0.3.0",
    "rimraf": "^2.5.2",
    "rucksack-css": "^0.8.5",
    "stylelint": "^4.5.0",
    "stylelint-config-suitcss": "^4.0.0",
    "uglify-js": "^2.6.2"
  }
}
