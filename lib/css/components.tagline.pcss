.Tagline {
    lost-center: $wide-container;
    margin-top: 8vr;

    &-name {
        lost-column: 1/2 0;
    }

    &-body {
        lost-column: 1 0;
        text-align: center;
        font-weight: 300;
        background: linear-gradient(45deg, #348AC7, #7474BF);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
}
